{
  "name": "Apple Daily",
  "version": "1.0",
  "description": "Show content without login.",
  "manifest_version": 2,
  "background": {
    "persistent": false,
    "scripts": ["scripts/background.js"]
  },
  "permissions": [
    "activeTab",
    "declarativeContent"
  ],
  "content_scripts": [
    {
      "matches": ["https://tw.appledaily.com/*","https://tw.news.appledaily.com/*"],
      "js": ["scripts/showContents.js"],
      "run_at": "document_end"
    }
  ]
}