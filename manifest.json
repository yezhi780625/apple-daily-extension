{
  "name": "Apple Daily",
  "version": "1.0.1",
  "description": "Show content without login.",
  "manifest_version": 2,
  "background": {
    "persistent": false,
    "scripts": ["scripts/utils.js", "scripts/background.js"]
  },
  "permissions": ["declarativeContent", "storage", "tabs"],
  "content_scripts": [
    {
      "matches": ["https://*.appledaily.com/*"],
      "js": [
        "scripts/utils.js",
        "scripts/jquery-3.4.0.min.js",
        "scripts/showContents.js"
      ],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_icon": {
      "32": "images/enable.png"
    },
    "default_title": "Apple Daily"
  }
}
